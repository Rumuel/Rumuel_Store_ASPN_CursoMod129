@model IEnumerable<Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">["Create New"]</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>@Html.DisplayNameFor(model => model.Birthday)</th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>@Html.DisplayNameFor(model => model.ZipCode)</th>
            <th>@Html.DisplayNameFor(model => model.NIF)</th>
            <th>@Html.DisplayNameFor(model => model.Number)</th>
            
        </tr>
    </thead>

    <tbody>
        @foreach (Client cl in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => cl.Name)</td>
                <td>@Html.DisplayFor(modelItem => cl.Email)</td>
                <td>@Html.DisplayFor(modelItem => cl.Birthday)</td>
                <td>@Html.DisplayFor(modelItem => cl.Address)</td>
                <td>@Html.DisplayFor(modelItem => cl.City)</td>
                <td>@Html.DisplayFor(modelItem => cl.ZipCode)</td>
                <td>@Html.DisplayFor(modelItem => cl.NIF)</td>
                <td>@Html.DisplayFor(modelItem => cl.Number)</td>



            </tr>
        }
    </tbody>

</table>
